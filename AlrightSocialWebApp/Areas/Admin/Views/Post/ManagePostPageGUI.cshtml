@model IEnumerable<AlrightSocialWebApp.Models.Post>;
@{
    ViewData["Title"] = "ManagePostPageGUI";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tiêu đề</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Title</td>
                <td>
                    <a href="/Post/DetailedPostPage?id=@item.ID">
                        <button class="btn btn-primary">Xem chi tiết</button>
                    </a>
                </td>
                <td>
                    @using (Html.BeginForm("ManageCommentGUI", "PostComment", new { area = "Admin", PostID = item.ID }, FormMethod.Post))
                    {
                        <button class="btn btn-secondary">
                            Quản lý bình luận
                        </button>
                    }
                </td>
                <td>
                    @using (Html.BeginForm("DeletePostForAdmin", "Post", new { area = "Admin", id=item.ID }, FormMethod.Post))
                    {
                        <button class="btn btn-danger">
                            Xoá
                        </button>
                    }
                    </td>
            </tr>
        }
    </tbody>
</table>