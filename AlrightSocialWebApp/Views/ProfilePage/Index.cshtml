                            {
                                <form asp-controller="Post" asp-action="Create" method="post">
                                    <div class="status-main">
                                        <div class="row mt-2 w-100">
                                            <div class="col-1">
                                                <img src="@Model.User.AvatarURL.ToString()" class="status-img">
                                            </div>
